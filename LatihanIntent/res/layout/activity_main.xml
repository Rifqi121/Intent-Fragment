<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">

    <View
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="#ff1493"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="#ff1493"
        android:layout_marginTop="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zona" />

    <View
        android:id="@+id/zona"
        android:layout_width="340dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/zona"
        android:layout_marginTop="20dp"
        android:src="@drawable/cat"/>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/gambar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/zona"
        android:text="Lisa's Cat"
        android:textColor="#fff0f5"
        android:textSize="20dp"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/judul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/gambar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/judul"
        android:text="select the picture you wanna see"
        android:textColor="#e0ffff"
        android:textSize="16dp"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/leo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Leo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul2"
        android:layout_marginRight="170dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/luca"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Luca"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul2"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/lili"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Lily"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leo"
        android:layout_marginRight="170dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/louis"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Louis"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luca"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/web"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="More pict"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/louis"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
